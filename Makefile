CPPFILE=repair.cpp
CXX = g++
DEBUGFLAGS = -ggdb -D_GLIBCXX_DEBUG -D_GLIBCXX_DEBUG_PEDANTIC
RELEASEFLAGS = -O3 -DNDEBUG
MYCXXFLAGS  = -Wall -pedantic -std=gnu++17 $(RELEASEFLAGS) $(DDEBUGFLAGS)
TARGET = repair-inplace
all: $(TARGET)

$(TARGET): $(CPPFILE)
	$(CXX) $(MYCXXFLAGS) $(CXXFLAGS) -o $(TARGET) $(CPPFILE) -lstdc++fs

clean:
	$(RM) $(TARGET)
